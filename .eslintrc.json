{
    "root": true,
    "extends": "airbnb/base",
    "parser": "babel-eslint",
    "plugins": [],
    "env": {
        "es6": true,
        "node": true,
        "mocha": true
    },
    "globals": {
        "expect": false,
        "assert": false
    },
    "rules": {
        "quotes": [2, "single"],
        "curly": 2,
        "semi": [2, "always"],
        "new-cap": 0
    }
}
